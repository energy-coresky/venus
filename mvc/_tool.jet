#.jet core template

#.ruler
@inc(.tool)
@inc(ruler.main)
#.ruler.tcolors
{!$history!}
@inc(.tool)
@inc(color.tailwind)
#.tcolors.hcolors
@inc(.tool)
@inc(color.html)
#.hcolors.tool
<div class="tool" id="t-{{$t->name}}" style="min-width:450px">
<p class="t-head inline-flex" style="align-items:center;">
  <a @href($(this).parents('.tool').remove()) class="x">@svg(x)</a>
  @block(`` as t_head)
</p>
<div class="flex" style="height:@block(t_height)292px~block;">
  <div class="mbg whitespace-nowrap" style="width:50px; padding:5px 3px;">@block(`` as t_left)</div>
  <div class="overflow-auto w-full">@block(`` as t_body)</div>
</div>
<p class="t-head inline-flex" style="align-items:center;">
  Selected: &nbsp; @block(`` as t_tail)
</p>
<script>@block(`` as t_js)</script>
</div>
#.tool

#.unicode //////////////////////////////////////////////////////////////////////////////       i$.load('unicode', i$.cp)
@inc(.tool)
#use(.t_head)
#use(`<a @href()>==set9</a><hr class="m-1">` as t_left)
#use(`{!$menu!}<div class="" id="unicode"></div>` as t_body)
#use(`` as t_tail)
#use(`i$.unicode()` as t_js)
#.unicode.t_head  <select onchange="i$.cp=parseInt(this.value);i$.unicode()">{!$opt!}</select>
<b>UniCode</b>: &nbsp;
<button class="btn mx-1" onclick="i$.unicode(-1)" style="font-family:Verdana;">◄</button>
<button class="btn mr-3" onclick="i$.unicode(1)" style="font-family:Verdana;">►</button>
<select onchange="$('#uni-font').css('fontFamily', this.value)">{!$fonts!}</select>
<a class="vs-mono vs-ic" style="font-size:16px" @href($$.ddm('show', '#muni', 1))>&nbsp;▼</a>
#.t_head

