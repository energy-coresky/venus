#.pseudo //////////////////////////////////////////////////////////////////////////////
@inc(.tool)
#use(`<b>Pseudo</b>:` as t_head)
#use(.pleft as t_left)
#use(.pbody as t_body)
#use(`` as t_tail)
#use(`` as t_js)
#.pseudo.pbody
<table class="p-1 w-full" id="pseudo">
@loop($evar as $row)
  <tr class="even">
  <td class="border px-1">{{$row->name}}:</td>
  <td class="border px-1">{{$row->grp}}</td>
  <td class="border px-1">{{$row->tmemo}} &nbsp; <code>{{$row->css}}</code></td>
  </tr>
~loop
</table>
#.pbody.pleft
<label><input type="radio" checked onchange="i$.t.hsort(this.checked)"@checked(0)> ALL</label><hr class="m-1">
@loop($grp as $one)<label><input type="radio" onchange="i$.t.hsort(this.checked)"@checked(0)> {{$one}}</label><br>~loop
#.pleft

#.css //////////////////////////////////////////////////////////////////////////////
@inc(.tool)
#use(.css_head as t_head)
#use(`<label><input type="checkbox" onchange="i$.t.toggle()"> help</label><hr class="m-1">` as t_left)
#use(.css_body as t_body)
#use(`` as t_tail)
#use(.css_js as t_js)
#.css.css_head
<b>CSS</b>: &nbsp;
@loop($list as $name)
  <label><input type="radio" name="css" value="{{$_}}"@checked($t->p == $_) onchange="i$.load('css', this.value)"> {{$name}}</label>
~loop
#.css_head.css_body
<table class="w-full" id="css"></table>{!$css!}
#.css_body.css_js
var css_data = JSON.parse($.trim($('#css-data').text()));
 //alert(css_data['display'])
i$.css(document.body, css_data, {{$t->p}});
#.css_js


#.icons //////////////////////////////////////////////////////////////////////////////
@inc(.tool)
#use(`<b>Icons</b>: &nbsp; <button class="btn mx-3 f2" onclick="i$.ip-=150; i$.load('icons', i$.ip)">&lt;</button><button class="btn mx-3 f2" onclick="i$.ip+=150; i$.load('icons', i$.ip)">&gt;</button>` as t_head)
#use(`qq` as t_left)
#use(._icons as t_body)
#use(`` as t_tail)
#use(`i$.css(document.body)` as t_js)
#.icons._icons
@loop($list as $fn => $icon)
  <div class="w-32 h-12 fl" style="border-right:1px solid #ccc; border-bottom:1px solid #ccc;">
    <div style="margin:2px 5px">{! $icon !}</div>
    <p class="text-xs">{{$fn}}</p>
  </div>
~loop
#._icons

#.text //////////////////////////////////////////////////////////////////////////////
@inc(.tool)
#use(._thead as t_head)
#use(`<label><input type="checkbox" onchange="i$.t.toggle()"> XXL</label><hr class="m-1">` as t_left)
#use(`<iframe srcdoc="@ob@inc(._text)@quot" id="text-frame" style="padding:0 5px;" class="w-full h-full"></iframe>` as t_body)
#use(`` as t_tail)
#use(`i$.t.toggle=function(){ let div = $$.doc('div:first', $('#text-frame'));div.toggle().next().toggle();};` as t_js)
#.text._thead
  <b>Text</b>: &nbsp;
  <label><input type="radio" name="f" value="0"> Family</label>
  <label><input type="radio" name="f" value="1" checked> Size</label>
  <label><input type="radio" name="f" value="2"> Weight</label>
  <label><input type="radio" name="f" value="3"> Letter Spacing</label>
  <label><input type="radio" name="f" value="4"> Line Height</label>
  <label><input type="radio" name="f" value="5"> Opacity</label>
#._thead._text
<html><head>{!Tailwind::css()!}</head>
<body>
  <div>
  @loop($sizes as $size)
    <p class="text-{{$size}}">
      <u class="text-sm">{{$size}}:</u> The quick@if($_ < 10) brown fox~if@if($_ < 7) jumped over the lazy dog~if.
    </p>
    @if(8 == $_)</div><div style="display:none">~if
  ~loop
  </div>
</body>
</html>
#._text
